{
  "manifest_version": 3,
  "name": "GoodTube",
  "version": "1.3",
  "description": "Hide YouTube ads, skip intros, and apply ad-blocking rules",
  "icons": {
    "48": "icon48.png"
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://sponsor.ajay.app/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon48.png",
    "default_title": "GoodTube"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icon48.png",
        "rules.json",
        "domains.txt",
        "skipIntroContent.js",
        "goodtubeContent.js"
      ],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ad_block_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js", "skipIntroContent.js", "goodtubeContent.js"],
      "run_at": "document_idle"
    }
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "minimum_chrome_version": "114",
  "background_update_interval_hours": 24
}



